{
  "name": "lazyrepo",
  "version": "0.0.0-alpha.10",
  "description": "lazyrepo is a caching task runner for npm/yarn/pnpm monorepos",
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ds300/lazyrepo.git"
  },
  "type": "module",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "clean": "rm -rf node_modules && pnpm install",
    "format": "prettier --write .",
    "format:check": "prettier --list-different .",
    "lint": "eslint -f compact **/*.{js,ts}",
    "prepare": "husky install"
  },
  "packageManager": "pnpm@latest",
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix"
    ],
    "*.{js,ts,json,yml,yaml,md}": [
      "prettier --write"
    ]
  },
  "files": [
    "index.js",
    "index.d.ts",
    "bin.js",
    "src",
    "assets",
    "LICENSE"
  ],
  "keywords": [],
  "author": "David Sheldrick",
  "bin": {
    "lazy": "./bin.js"
  },
  "license": "MIT",
  "types": "index.d.ts",
  "dependencies": {
    "@sindresorhus/slugify": "^2.2.0",
    "cross-spawn": "^7.0.3",
    "fast-glob": "^3.2.12",
    "fast-json-stable-stringify": "^2.1.0",
    "kleur": "^4.1.5",
    "slice-ansi": "^6.0.0",
    "source-map-support": "^0.5.21",
    "strip-ansi": "^7.0.1",
    "yaml": "^2.2.1"
  },
  "devDependencies": {
    "@types/cross-spawn": "^6.0.2",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@types/slice-ansi": "^5.0.0",
    "@types/source-map-support": "^0.5.6",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "cac": "^6.7.14",
    "esbuild": "^0.17.15",
    "esbuild-jest": "^0.5.0",
    "eslint": "^8.38.0",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-n": "^15.7.0",
    "husky": "^8.0.0",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.1",
    "node-gyp": "^9.3.1",
    "prettier": "^2.8.7",
    "prettier-plugin-organize-imports": "^3.2.2",
    "typescript": "^5.0.3"
  }
}
